:
cat <<EOI >>>test.cli;
include "foo/abc.hxx";
include <vector>;
include "c++:map";
include <cli:map>;
include "map.cli"
EOI
$* test.cli >>EOO
keyword: include
c++ path: "foo/abc.hxx"
;
keyword: include
c++ path: <vector>
;
keyword: include
c++ path: "map"
;
keyword: include
cli path: <map>
;
keyword: include
cli path: "map.cli"
<EOS>
