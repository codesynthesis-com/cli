: quoted-argument
:
cat <<EOI >=test.ops;
"'foo  bar'"
'"foo  bar"'
EOI
$* --file test.ops >>EOO
'foo  bar'
"foo  bar"
EOO

: direct-file-load
:
cat <<EOI >=test.ops;
-f
-a 123
EOI
$* --- test.ops >>EOO
-f
-a
123
EOO

: direct-file-empty
:
cat <<EOI >=test.ops;
EOI
$* --- test.ops

: direct-file-load-nested
:
cat <<EOI >=test.ops;
-f
--file ../base.ops
-a 123
EOI
$* ---- test.ops >>EOO
-f
-a
21
-b
21
-a
123
EOO
